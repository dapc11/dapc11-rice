#!/bin/bash

#echo -e "\n\tUpdating packages"
#echo "----------------------------------------------------"
#sudo apt-get update

#echo -e "\n\tCleaning up old packages"
#echo "----------------------------------------------------"
#sudo apt-get autoremove
#sudo apt-get autoclean

#echo -e "\n\tPrepare Alacritty"
#echo "----------------------------------------------------"
#sudo add-apt-repository ppa:mmstick76/alacritty

echo -e "\n\tInstalling packages"
echo "----------------------------------------------------"
#sudo apt-get install \
sudo pacman -Sy \
    dkms \
    ttf-font-awesome \
    zsh \
    python3 \
    curl \
    git \
    xsel \
    xclip \
    gvim \
    tmux \
    slock \
    ranger \
    python-ueberzug \
    fzf \
    cmake \
    rofi \
    picom \
    xorg-xsetroot \
    xorg-setxkbmap \
    unclutter \
    ack \
    the_silver_searcher \
    dmenu \
    nitrogen \
    alacritty
    #feh \
    #vim-gtk \
    #python3-pip \
    #dconf-cli \
    #uuid-runtime \
    #fonts-font-awesome \
    #build-essential \

pip3 install --user --requirement requirements.txt

echo -e "\n\tInstalling Oh-My-Zsh"
echo "----------------------------------------------------"
sh -c "$(curl -fsSL https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh)"


echo -e "\n\tGenerating dotfiles"
echo "----------------------------------------------------"
python3 rice_it -o

echo -e "\n\tSetting up Suckless"
echo "----------------------------------------------------"
rm -rf dwm st
git clone https://github.com/dapc11/dwm.git
#it clone https://github.com/dapc11/st.git

cd dwm
sudo make clean install
#d ../st
#udo make clean install
cd ..
xrdb -merge ~/.Xresources
nitrogen --random --set-zoom-fill /usr/share/backgrounds
chmod +x ~/.local/bin/nightmode ~/.local/bin/sysact

echo -e "\nSetup Vim - YouCompleteMe by running: \n
cd ~/.vim/plugged/youcompleteme
python3 install.py --all"
echo -e "\nDone"
exit 0
